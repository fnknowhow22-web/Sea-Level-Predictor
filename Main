import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import linregress
import numpy as np

def draw_plot():
    # Read data from file
    df = pd.read_csv('epa-sea-level.csv')
    
    # Create scatter plot
    plt.figure(figsize=(10, 6))
    plt.scatter(df['Year'], df['CSIRO Adjusted Sea Level'], alpha=0.7, label='Data')
    
    # Create first line of best fit (all data)
    slope, intercept, r_value, p_value, std_err = linregress(df['Year'], df['CSIRO Adjusted Sea Level'])
    
    # Generate x values from 1880 to 2050 for the first line
    years_all = np.arange(1880, 2051)
    # Calculate y values for the first line
    sea_levels_all = slope * years_all + intercept
    
    # Plot the first line of best fit
    plt.plot(years_all, sea_levels_all, 'r', label='Best Fit Line (1880-2013)')
    
    # Create second line of best fit (from year 2000)
    # Filter data from year 2000 onwards
    df_recent = df[df['Year'] >= 2000]
    
    # Calculate linear regression for recent data
    slope_recent, intercept_recent, r_value_recent, p_value_recent, std_err_recent = linregress(
        df_recent['Year'], df_recent['CSIRO Adjusted Sea Level'])
    
    # Generate x values from 2000 to 2050 for the second line
    years_recent = np.arange(2000, 2051)
    # Calculate y values for the second line
    sea_levels_recent = slope_recent * years_recent + intercept_recent
    
    # Plot the second line of best fit
    plt.plot(years_recent, sea_levels_recent, 'g', label='Best Fit Line (2000-2013)')
    
    # Add labels and title
    plt.xlabel('Year')
    plt.ylabel('Sea Level (inches)')
    plt.title('Rise in Sea Level')
    plt.legend()
    
    # Save plot and return data for testing (don't change this part)
    plt.savefig('sea_level_plot.png')
    return plt.gca()
